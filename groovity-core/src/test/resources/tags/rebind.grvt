y = 1
x = 2
assert x+y == 3
rebind(x: 4, y: 5){
	assert x+y == 9
	rebind(y:11){
		assert x + y == 15
	}
	assert x + y == 9
}
assert x+y == 3
rebind(x:19){
	assert x+y == 20
}
rebind(y:9){
	assert x+y == 11
	rebind(y:11){
		assert x + y == 13
	}
	assert x + y == 11
}

rebind(z:13){
	assert x + z == 15
}
def mp = null
try{
	assert x + z == 15
}
catch(MissingPropertyException m){
	mp = m
}
assert mp != null

