a = 5
x = 10

y = unbind{
	a = 7
	x * a
}

assert y == 70 

y = unbind(x: 11){
	x * a
}

assert y == 55 

y = x * a

assert y == 50

String r = <~
<g:bind b="9" c="11"/>
<g:write value="${b+c}|"/>
<g:norm b="${0}" c="${0}"/>
<g:write value="${b+c}|"/>
<g:unbind c="${13}">
	<g:write value="${b+c}|"/>	
	<g:bind b="31"/>
	<g:norm b="${0}"/>
	<g:write value="${b+c}|"/>	
</g:unbind>
<g:write value="${b+c}|"/>
~>

assert r == '911|20|22|44|20|'

answer = unbind( a: 123, b: 456) { 
	z = a * b 
	assert binding.hasVariable('z') == true
	z
}

assert answer == 56088

assert binding.hasVariable('z') == false